extends layout 

block content 
    h1 Update Book

    include form-error

    form
        p 
            label(for="title") Title 
            input#title(name="title" type ="text" placeholder=book.title required)
        p 
            label(for="author") Author
            input#author(name="author" type ="text" placeholder=book.author required)
        p 
            label(for="genre") Genre 
            input#genre(name="genre" type ="text" placeholder=book.genre)
        p 
            label(for="year") Year  
            input#year(name="year" type ="text" placeholder=book.year)
        p
            input(type="submit" value="Update Book")
    form(method="post" action=`/books/${book.id}/delete` onsubmit="return confirm('Do you really want to delete this book?');")
        p
            a.button(href=`/books`) Cancel
        p
            input(type="submit" value="Delete Book")